# Exemple de configuration des variables d'environnement pour Google Cloud Run

# Configuration de la base de données
# Pour Cloud SQL PostgreSQL
DATABASE_URL=postgresql://username:password@/database_name?host=/cloudsql/project:region:instance

# Configuration du serveur
NODE_ENV=production
PORT=5000

# Configuration de l'application
SESSION_SECRET=your-session-secret-key-here

# Configuration des uploads (Cloud Storage)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name

# Configuration de l'AI (optionnel)
GROQ_API_KEY=your-groq-api-key

# Configuration de sécurité
ALLOWED_ORIGINS=https://your-domain.com,https://your-app.run.app

# Configuration des logs
LOG_LEVEL=info

# Configuration des limites
MAX_FILE_SIZE=100000000
MAX_FILES_PER_UPLOAD=20

# Configuration des sessions
SESSION_MAX_AGE=86400000